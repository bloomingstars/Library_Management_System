<h1>All bookmarked books</h1>
<p id="notice"><%= notice %></p>

<div class="container-fluid">
  <table class="table table-bordered">
    <thead>
    <tr>
      <th scope="col">TITLE</th>
      <th scope="col">AUTHOR</th>
      <th scope="col">STATUS</th>
      <th scope="col">COVER PICTURE</th>
      <th scope="col">LIBRARY</th>
      <th colspan="3"></th>
    </tr>
    </thead>
    <tbody>
    <%@reservation= Reservation.where(:User_id=> current_user.id, :bookmark=> true) %>
    <% @reservation.each do |reserve| %>
    <% @book= Book.where(:id => reserve.Books_id).first %>
      <tr>
        <td scope="row"><%= @book.b_title %></td>
        <td><%= @book.b_author %></td>
        <td><%= 'BookMarked' %></td>
        <td><%= image_tag @book.b_image, :alt => 'product_image',style:"width:200px;height:200px;" %></td>
        <td><%= Library.find(@book.Library_id.to_i).l_name %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
